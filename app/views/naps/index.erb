<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Here are all the naps for <%= @baby.name %></h1>

<ol type="1">
<% @naps.each do |nap| %>
	<li>Nap <a href="/naps/<%= nap.id %>">(Details)</a></li>
		<ul>
			<li>Nap Length (in minutes): <%= (nap.end_time - nap.start_time) / 1.minutes %></li>
			<li>Notes: <%= nap.notes %></li>
		</ul>
<% end %>
</ol>

<a href="/babies/<%= @baby.id %>/new">Enter a New Nap</a>