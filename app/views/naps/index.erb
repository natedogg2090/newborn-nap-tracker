<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Here are all the naps for <%= @baby.name %></h1>

<ol type="1">
<% @naps.each do |nap| %>
	<li>Nap <a href="/naps/<%= nap.id %>">(Details)</a></li>
		<ul>
			<!-- Nap length should return the length of the nap in minutes. Will also need to think about date handling for overnight naps. -->
			<li>Nap Length: <%= nap.end_time - nap.start_time %></li>
			<li>Notes: <%= nap.notes %></li>
		</ul>
<% end %>
</ol>

<a href="/babies/<%= @baby.id %>/new">Enter a New Nap</a>